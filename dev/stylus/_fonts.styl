@import '_variables'

@font-face
  font-family 'Biko'
  src url('../fonts/Biko_Light.ttf') format('truetype'),
      url('../fonts/Biko_Light.woff') format('woff'),
      url('../fonts/Biko_Light.woff2') format('woff2')
  font-style normal
  font-weight 300

@font-face
  font-family 'Biko'
  src url('../fonts/Biko_Regular.ttf') format('truetype'),
      url('../fonts/Biko_Regular.woff') format('woff'),
      url('../fonts/Biko_Regular.woff2') format('woff2')
  font-style normal
  font-weight normal

@font-face
  font-family 'Biko'
  src url('../fonts/Biko_Bold.ttf') format('truetype'),
      url('../fonts/Biko_Bold.woff') format('woff'),
      url('../fonts/Biko_Bold.woff2') format('woff2')
  font-style normal
  font-weight bold

@font-face
  font-family 'meteo'
  src url('../fonts/meteo.eot?')
  src url('../fonts/meteo.eot?#iefix') format('embedded-opentype'), 
      url('../fonts/meteo.ttf?') format('truetype'), 
      url('../fonts/meteo.woff?') format('woff'), 
      url('../fonts/meteo.svg?#meteo') format('svg')
  font-weight normal
  font-style normal

i
  font-family 'meteo' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

// Icons
i[class^="w-8"]
  &:before
    content meteo-cloudy2
.w-800
  &:before
    content meteo-sun
.w-801
  &:before
    content meteo-cloudy
.w-802
  &:before
    content meteo-cloud2
i[class^="w-2"]
  &:before
    content meteo-lightning
i[class^="w-3"]
  &:before
    content meteo-rainy
i[class^="w-5"]
  &:before
    content meteo-rainy2
i[class^="w-6"]
  &:before
    content meteo-snowy2